////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  VSphere Credentials
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "vsphere" {
    type                = map
    description         = "VSphere Credentials"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  SSH Credentials
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "ssh" {
    type                = map
    description         = "SSH Configuration Variables"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Global Workspace Information
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "info" {
    type                = map
    description         = "Global Workspace Information"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Vault Transit Server Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "transit" {
    type                = map
    description         = "Vault Transit Server Configuration Map"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Zone Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "storage_zones" {
    type                = map
    description         = "Consul Storage Availability Zones Map"
}

variable "vault_zones" {
    type                = map
    description         = "Vault Availability Zones Map"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Image Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "image" {
    type                = map
    description         = "Image Configuration Variables"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Server Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "server" {
    type                = map
    description         = "Server Configuration Variables"
}

variable "dns_servers" {
    type                = list(string)
}

variable "dns_suffix_List" {
    type                = list(string)
}
